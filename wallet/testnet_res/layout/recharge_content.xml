<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:divider="?android:attr/dividerHorizontal"
        android:dividerPadding="0dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginLeft="@dimen/list_entry_padding_horizontal_lax"
        android:layout_marginRight="@dimen/list_entry_padding_horizontal_lax"
        android:layout_weight="1"
        android:orientation="vertical" >


        <TextView
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/request_recharge"
            android:textStyle="bold" />

        <TextView
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/to_recharge_your_wallet_please" />

        <TextView
            android:id="@+id/textView2"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="@string/itxxt1927501600393471018002"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView2b"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="@string/iban_BIC"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textIsSelectable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView44"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/remember_to_write_your_telephone_number_with_the_international_prefix_in_the_causation_of_the_transfer"
            />

        <TextView
            android:id="@+id/textViewTelephone"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="number"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="@string/for_test_we_provide_to_recharge_your_wallet_max_once_a_day_with_a_fixed_amount_of" />


        <TextView
            android:id="@+id/textView4"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="@string/vtkn_10_00"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView3b"
            style="@style/My.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/for_test_we_provide_to_recharge_your_wallet_max_once_a_day_with_a_fixed_amount_of_2"
            android:visibility="invisible" />


        </LinearLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/recharge_buttons_include" />

    </LinearLayout>
</ScrollView>
